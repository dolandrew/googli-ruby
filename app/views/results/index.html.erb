<div style="text-align: center;">
  <img alt="Questions, ideas, or bugs? Email dolandrew@gmail.com or go to github.com/dolandrew. Enjoy!"
     title="Questions, ideas, or bugs? Email dolandrew@gmail.com or go to github.com/dolandrew. Enjoy!"
     class="App-logo"
     src="phish-logo.png"/>

  <%= form_tag({controller: 'results', action: 'index'}, method: :get) do %>
    <br>
    <div>
      <%= text_field_tag(:query, nil, placeholder: 'enter a word or phrase', class: "search-box", size: 50) %>
    </div>
    <br>
    <%= submit_tag('Search') %>
  <% end %>

  <br>

  <div style="padding-left:33%;padding-right:33%;">
    <% @results.each do |result| %>
      <a href="<%= result['link'] %>"><%= result['name'] %></a>
      <% result['snippets']&.each do |snippet| %>
        <p><%= snippet %></p>
      <% end %>
    <% end %>
  </div>

</div>
